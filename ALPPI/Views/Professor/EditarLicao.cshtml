@model ALPPI.Models.Licao

@{
    DateTime[] dias = new DateTime[] { DateTime.Today.Date,DateTime.Today.Date.AddDays(1),DateTime.Today.Date.AddDays(2),DateTime.Today.Date.AddDays(3),DateTime.Today.Date.AddDays(4),DateTime.Today.Date.AddDays(5),DateTime.Today.Date.AddDays(6) };
}
<link href="@Url.Content("~/Content/themes/base/jquery-ui.min.css")" rel="stylesheet" />
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="@Url.Content("~/Scripts/jquery-1.12.4.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")"></script>
<link href="~/Content/jquery-ui-timepicker-addon.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-timepicker-addon.min.js"></script>
<script src="~/Scripts/datepicker-pt-BR.js" charset="UTF-8"></script>
<script type="text/javascript">
    $(function () {
        $('.date-picker').datepicker({ dateFormat: 'dd/mm/yy', minDate: '+1D'});
    });
</script>


<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <title>Cadastro de Lições - ALPPI</title>
    <link rel="shortcut icon" href="~/Imagens/ICONE.ico" type="image/x-icon" />
</head>
<div class="LICAO CADASTRO">
    @using(Html.BeginForm("EditarLicao","Professor",FormMethod.Post)) {
        @Html.HiddenFor(Model => Model.idLicao)
        if(ViewBag.Sucesso !=  null) {
            if(ViewBag.Sucesso) {
                <div class="text-success"><center><p>Lição Editada!</p></center><br></div>
            }
        }
        <center><p>@Html.ValidationSummary(true,null,new { @class = "text-danger" })</p></center><br>
        <div class="container">
            <div class="cards__block">
                <div class="form-group">
                    @Html.ValidationMessageFor(Model => Model.nme_Licao,null,new { @class = "text-danger" })
                    @Html.LabelFor(Model => Model.nme_Licao,new { @for = "exampleInputEmail1" })
                    @Html.TextBoxFor(Model => Model. nme_Licao,new { @class = "form-control",id = "exampleInputEmail1",@placeholder = "Nome da Licao" })
                    <center><small id="emailHelp" class="form-text text-muted">Digite o nome da Lição</small></center>
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(Model => Model.Dta_Conclusao_Licao,null,new { @class = "text-danger" })
                    @Html.LabelFor(Model => Model.Dta_Conclusao_Licao,new { @for = "exampleInputEmail1",id = "exampleInputEmail1" })
                    @Html.TextBox("data","",new { @class = "date-picker form-control" })
                    <center><small id="emailHelp" class="form-text text-muted">Informe o Prazo Maximo de Entrega</small></center>
                </div>
            </div>
        </div>
        <br>
        <center><button type="submit" class="btn btn-outline-success">Pronto</button></center>
        <br><br><br><br><br><br>
    }
</div>