@model ALPPI.Models.Pergunta

<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <title>Cadastro de Lições - ALPPI</title>
    <link rel="shortcut icon" href="~/Imagens/ICONE.ico" type="image/x-icon" />
</head>
<div class="LICAO CADASTRO">
    @using(Html.BeginForm("EditarPergunta", "Professor", FormMethod.Post)) {
        @Html.HiddenFor(Model => Model.idPergunta)
        <center><p>@Html.ValidationSummary(true, null, new { @class = "text-danger" })</p></center><br>
        <div class="container">
            <div class="cards__block">
                <div class="form-group">
                    @Html.ValidationMessageFor(Model => Model.des_Pergunta, null, new { @class = "text-danger" })
                    @Html.LabelFor(Model => Model.des_Pergunta, new { @for = "exampleInputEmail1", @style = "align:center;" })
                    @Html.TextAreaFor(Model => Model.des_Pergunta, new { @class = "form-control", id = "exampleInputEmail1", @rows = "6", @style = "vertical-align:middle;" })
                </div>
            </div>
        </div>
        <br>
        <center><button type="submit" class="btn btn-outline-success">Pronto</button></center>
        <br><br><br><br><br><br>
    }
</div>